{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "npm",
            "script": "watch",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "Rebuild",
            "type": "npm",
            "script": "rebuild",
            "problemMatcher": "$tsc",
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "Lint",
            "type": "npm",
            "script": "lint",
            "problemMatcher": [
                "$tslint5",
                {
                    "fileLocation": "relative",
                    "owner": "markdownlint",
                    "source": "markdownlint",
                    "pattern": {
                        "regexp": "^(.*): (\\d+): (MD\\d{3})([a-z-\\/]*) (.*)$",
                        "file": 1,
                        "line": 2,
                        "code": 3,
                        "message": 5
                    }
                }
            ],
            "presentation": {
                "reveal": "never"
            }
        }
    ]
}